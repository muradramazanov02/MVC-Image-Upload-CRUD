@model Category
<div class="container">
    <div class="row">
        <div class="col-12">
            <form method="post" asp-action="Create">
                <div class="mb-3">
                    <label class="col-sm-2 col-form-label">Name</label>
                    <input asp-for="Name" name="Name" type="text" class="form-control">
                </div>

                <button type="submit" class="btn btn-success" asp-validation-for="Name">Create</button>
                <a asp-action="Index" class="btn btn-info">Cancel</a>

            </form>
        </div>
    </div>
</div>